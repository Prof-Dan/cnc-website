extends ../layout.jade

block head
  link(href="../about.css" rel="stylesheet")

block content

  nav(class="navbar navbar-default navbar-fixed-top")
    div(class="container")
      div(class="navbar-header")
        button(type="button", class="navbar-toggle collapsed", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
          span(class="sr-only") Toggle navigation
          span(class="icon-bar")
          span(class="icon-bar")
          span(class="icon-bar")
        a(class="navbar-brand", href="./index.html") HM Tech
      div(id="navbar", class="navbar-collapse collapse")
        ul(class="nav navbar-nav")
          li
            a(href="./index.html") Home
          li
            a(href="./about.html") About
          li(class='active')
            a(href="#") Contact
            
  br
  br
  h1 Contact form
  div(id='contactFormDiv', class='col-md-6')
    form(id='contactForm')
      div(class="form-group")
        label(for="inputEmail") Email address
        input(type="email", class="form-control", id="inputEmail", placeholder="Email")
      div(class='form-group')
        label(for='industrySelect') Industry:
        select(class="form-control", id='industrySelect')
          option Building
          option Architecture
          option Design
      button(type="submit", class="btn btn-default") Submit
  
  script(src="../bootstrap.min.js")
  script(src='../js/formSubmit.js')
